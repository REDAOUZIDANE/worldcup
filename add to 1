{% extends "base.html" %}

{% block title %}{{ hotel.name }} - VamosWay{% endblock %}

{% block head %}
<style>
    .hotel-gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 1rem;
    }
    
    .gallery-main {
        grid-column: span 2;
        grid-row: span 2;
    }
    
